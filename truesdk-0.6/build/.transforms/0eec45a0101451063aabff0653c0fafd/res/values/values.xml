    <string name="com_truecaller_truebutton_text_sign_up">Sign up with Truecaller</string>
    <string name="com_truecaller_truebutton_text_sign_up_short">Sign up</string>
    <string name="tc_logo">TC Logo</string>
    <style name="com_truecaller_truebutton_text_style" parent="@android:style/TextAppearance.Inverse">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
